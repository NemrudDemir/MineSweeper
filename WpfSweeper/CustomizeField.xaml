<Window x:Class="WpfSweeper.CustomizeField"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSweeper"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="CustomizeField" Height="199.714" Width="300" Closing="Window_Closing">
    <Grid>
        <Grid Height="28" Margin="10,10,10,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="44"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Slider x:Name="sldBreite" VerticalAlignment="Center" Margin="10,5" Height="18" Grid.Column="1" ValueChanged="sldBreite_ValueChanged"/>
            <Label Grid.Column="0" Content="Breite" Margin="0,0,0,0"/>
            <Label x:Name="lblBreite" Grid.Column="2" Content="99" Margin="0,0,0,0" HorizontalContentAlignment="Right"/>
        </Grid>
        <Grid Height="28" Margin="10,43,10,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="44"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Slider x:Name="sldHoehe" VerticalAlignment="Center" Margin="10,5" Height="18" Grid.Column="1" ValueChanged="sldHoehe_ValueChanged"/>
            <Label Grid.Column="0" Content="Höhe" Margin="0,0,0,0"/>
            <Label x:Name="lblHoehe" Grid.Column="2" Content="99" Margin="0,0,0,0" HorizontalContentAlignment="Right"/>
        </Grid>
        <Grid Height="28" Margin="10,76,10,0" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="44"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Slider x:Name="sldMinen" VerticalAlignment="Center" Margin="10,5" Height="18" Grid.Column="1" ValueChanged="sldMinen_ValueChanged"/>
            <Label Grid.Column="0" Content="Minen" Margin="0,0,0,0"/>
            <Label x:Name="lblMinen" Grid.Column="2" Content="99" Margin="0,0,0,0" HorizontalContentAlignment="Right"/>
        </Grid>
        <Button x:Name="cmdConfirm" Content="OK" Margin="0,0,90,10" HorizontalAlignment="Right" Width="75" Height="20" VerticalAlignment="Bottom" Click="cmdConfirm_Click"/>
        <Button x:Name="cmdCancel" Content="Abbrechen" Margin="0,0,10,10" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="cmdCancel_Click"/>

    </Grid>
</Window>
